<%- include('includes/header.ejs') %>

    <body class="bg-gray-100 text-gray-900">
        <%- include('includes/nav.ejs') %>
            <main class="max-w-3xl mx-auto p-6 bg-white shadow-lg rounded-lg mt-10">
                <form action="/confirmation" method="GET" class="mb-6">
                    <input type="text" name="search" value="<%= searchTerm %>"
                        placeholder="Search reservations by name or email"
                        class="w-full p-3 border border-gray-300 rounded-lg">
                </form>
                <h1 class="text-3xl font-semibold text-center text-blue-600">Reservation Confirmation</h1>


                <% if (reservation) { %>
                    <p class="text-lg mt-4 text-center">Thank you for your reservation, <span
                            class="font-bold text-blue-600">
                            <%= reservation.name %>
                        </span>!</p>

                    <p class="mt-6 text-lg">Your last reservation details are as follows:</p>
                    <ul class="list-disc pl-5 mt-4">
                        <li><strong class="text-blue-600">Email:</strong>
                            <%= reservation.email %>
                        </li>
                        <li><strong class="text-blue-600">Check-In Date:</strong>
                            <%= reservation.checkInDate %>
                        </li>
                        <li><strong class="text-blue-600">Check-Out Date:</strong>
                            <%= reservation.checkOutDate %>
                        </li>
                        <li><strong class="text-blue-600">Room Type:</strong>
                            <%= reservation.roomType %>
                        </li>
                        <li><strong class="text-blue-600">Price:</strong>
                            <%= reservation.totalPrice %>
                        </li>
                    </ul>
                    <p class="mt-6 text-lg text-center">We look forward to hosting you!</p>
                    <% } else { %>
                        <p class="text-center text-lg">No reservation found.</p>
                        <% } %>

                            <h2 class="mt-8 text-2xl text-center text-blue-600">All Reservations</h2>
                            <% if (allReservations.length> 0) { %>
                                <ul class="list-disc pl-5 mt-4">
                                    <% allReservations.forEach(res=> { %>
                                        <li>
                                            <strong>
                                                <%= res.name %>
                                            </strong> - <%= res.roomType %>
                                                (Check-in: <%= res.checkInDate %>, Check-out: <%= res.checkOutDate %>
                                                        ,Price: <%= res.totalPrice %>)
                                        </li>
                                        <% }) %>
                                </ul>
                                <% } else { %>
                                    <p class="text-center text-lg">No reservations available.</p>
                                    <% } %>

                                        <div class="mt-6 text-center">
                                            <a href="/"
                                                class="inline-block bg-blue-600 text-white py-2 px-6 rounded-lg hover:bg-blue-700 transition duration-300">Back
                                                to Home</a>
                                        </div>
            </main>
            <%- include('includes/end.ejs') %>